<div class="container home">
  <div class="apphead">
    <h1>Welcome <%= @current_user.username %>! </h1>
    <h1>Your Current Points: <%= @current_user.points %> </h1>
    <%= button_to "Logout", logout_path, method: :delete %>
  </div>
  <%= button_to "Log Daily Reading", '/daily', method: :post%>
  <br>

  <h2>Books</h2>
  <% user_books.each do |b|%>
    <div class="bookrow">
      <h4><b><%="#{b[0]}"%></b></h4>
      <p></p>
      <% if b[2] %> 
        <p><i>Complete</i></p>
      <% else %>
        <p><i><%= "worth #{b[1]}" %></i></p>
      <% end %>
      <%= button_to "Complete", "/bible?book=#{b[0]}", method: :post%>
    </div>
  <% end %>

</div>
